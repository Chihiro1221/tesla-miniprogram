.category-container {
  width: 100vw;
}

.category-container > .cover {
  width: 100%;
  height: 390rpx;
}

.category-container > .content {
  padding: 100rpx 50rpx;
}

.content > .title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.content .content-item {
  display: flex;
  align-items: center;
  margin-bottom: 70rpx;
}

.content .content-item .desc {
  flex: 1;
}
.content .content-item .title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 28rpx;
}
.content .content-item .time {
  font-size: 22rpx;
  color: #a3a3a3;
}
.content .content-item .cover {
  width: 210rpx;
  height: 140rpx;
  border-radius: 20rpx;
}
