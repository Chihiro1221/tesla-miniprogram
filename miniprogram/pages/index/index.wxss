.page {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.magazine {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 128rpx;
}
.magazine .title {
  font-size: 45rpx;
  font-weight: bold;
  margin-bottom: 45rpx;
}
.magazine .cover {
  width: 435rpx;
  height: 550rpx;
  display: block;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}
.card-container {
  width: 650rpx;
  height: 275rpx;
  overflow: hidden;
  background-color: #f4f7f7;
  border-radius: 20rpx;
  position: relative;
  margin-bottom: 50rpx;
}
.card-container .credit-cover {
  position: absolute;
  top: 40rpx;
  right: 65rpx;
  width: 200rpx;
  height: 120rpx;
}
.card-container .video-cover {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 100%;
  height: 100% !important;
}
.card-container .content {
  position: absolute;
  top: 100rpx;
  left: 44rpx;
}

.card-container .content .title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.card-container .content .subtitle {
  font-size: 24rpx;
}

.icon-area {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-evenly;
  margin-bottom: 100rpx;
}

.icon-area > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 130rpx;
}

.icon-area > view image {
  width: 100%;
}
.icon-area > view > view {
  font-size: 28rpx;
}
.icon-area > view image.sign {
  width: 80rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}

.book-dialog .detail-page {
  padding: 50rpx;
}
.book-dialog .detail-page .head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 45rpx;
}
.book-dialog .detail-page .head .head-title {
  font-weight: bold;
}
.book-dialog .detail-page .head .head-close-icon {
  font-size: 40rpx;
}

.book-dialog .detail-page .content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-dialog .detail-page .content .content-item {
  width: 100%;
  border: 1rpx solid #d1d1d1;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding: 24rpx 42rpx;
  box-sizing: border-box;
}
.book-dialog .detail-page .content .content-item:focus {
  border: 4rpx solid #446bd9;
}
.book-dialog .detail-page .content .content-item .item-image {
  width: 295rpx;
  height: 140rpx;
}

.book-dialog .detail-page .content .content-item .item-title {
  font-weight: bold;
}
